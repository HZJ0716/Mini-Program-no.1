/* component/shoplist/search/index.wxss */

.container{
  display: flex;
}
/* 搜索栏 */
.header{
  position: relative;
   width: 100%;
   height: 107rpx;
   background-color: #fff;
}

.sea-container{
  position: relative;
  width: 540rpx;
  height: 66rpx;
  border-radius: 40rpx;
  margin-top: 33rpx;
  margin-left: 55rpx;
  background-color: rgb(249, 249, 249); 
}

.icon{
  position: absolute;
  top: 20rpx;
  left: 29rpx;
  width: 25rpx;
  height: 25rpx;
}

.bar{
  border-top-right-radius: 15px;
  border-bottom-right-radius: 15px;
  display: inline-block;
  height: 66rpx;
  margin-left: 60rpx;
  /* width:100%; */
  width: 400rpx;
  font-size: 18rpx;
}

.del{
 width: 66rpx;
 height: 66rpx;
 z-index: 99;
}

.del image{
  position: absolute;
  top: 20rpx;
  right: 25rpx;
  width: 25rpx;
  height: 25rpx;
}

.cancel{
  position: absolute;
  top: 0rpx;
  right: 20rpx;
  width: 120rpx;
  height: 64rpx;
  border: 1rpx solid #828282;
  border-radius: 40rpx;
  text-align: center;
  line-height: 66rpx;
  color: #828282;
}

/* 搜索列表 */
.list{
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 140rpx;
  padding-left: 30rpx;
  border-top: 2rpx solid #eee;
}

.list image{
  width:  100rpx;
  height: 120rpx;
  margin-top: 10rpx;
  margin-right: 10rpx;
}

.text{
  margin-top: 40rpx;
  display: flex;
  flex-direction: column;
}

.title{
  font-size: 18rpx;
  width: 450rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;

}

.price{
  margin-top: 30rpx;
  font-size: 14rpx;
  color: #333;
}

.empty{
  font-size: 20rpx;
  color: #333;
  text-align: center;
}