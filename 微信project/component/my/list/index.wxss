/* component/my/list/index.wxss */
page{
  background-color: #fcfcfc;
}
.container{
  padding: 20rpx;
  display:flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

/* 收藏内容 */
.list{
  width: 331rpx;
  height: 400rpx;
  margin-bottom: 20rpx;
  margin-top: 20rpx;
  box-shadow: 10rpx 10rpx 10rpx rgba(190, 190, 190, 0.3);
  border-radius: 10rpx;
}

.Img{
  width: 100%;
  height: 230rpx;
}

.shoucang{
  display: flex;
  flex-direction: row;
  position: relative;
  line-height: 81rpx;
  font-size: 24rpx;
}

.name{
  width: 50%;
  margin-left: 20rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.like{
  position: absolute;
  right: 40rpx;
  top: 25rpx;
}

.content{
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  margin: 20rpx;
}