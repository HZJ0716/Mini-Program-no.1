/* pages/shop_detail/shop_detail.wxss */
/* 商品详情 */
.container{
  display: flex;
  flex-direction: column;
  position: relative;
}

.banner{
  width: 100%;
}

.title{
  font-size: 20rpx;
  font-weight: bold;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  width: 500rpx;
  margin: 10rpx 20rpx;
}

.idName{
  font-size: 24rpx;
  font-weight: bold;
  margin: 10rpx 20rpx;
}

.line{
  width: 100%;
  height: 40rpx;
  background-color: rgb(245, 245, 245);
  margin: 20rpx 0;
}

/* 大图展示 */
.bg-show{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 1400rpx;
  background-color: rgba(30, 30, 30, 0.8);
  z-index: 99;
}

.banner-show{
  width: 100%;
  position: relative;
  top: 400rpx;
  left: 0;
}